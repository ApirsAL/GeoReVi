                                </RotateTransform3D>
                                <RotateTransform3D>
                                    <RotateTransform3D.Rotation>
                                        <AxisAngleRotation3D 
                                    Axis="0.0, 0.0, 1.0" 
                                    Angle="{Binding ElementName=sliderZ, Path=Value}"/>
                                    </RotateTransform3D.Rotation>
                                </RotateTransform3D>-->
                            <TranslateTransform3D 
                                    OffsetX="{Binding ElementName=transSliderX, Path=Value}"
                                    OffsetY="{Binding ElementName=transSliderY, Path=Value}"
                                    OffsetZ="{Binding ElementName=transSliderZ, Path=Value}"/>
                            <!--<ScaleTransform3D 
                                    ScaleX="0.8"
                                    ScaleY="0.8"
                                    ScaleZ="0.8"/>-->
                        </Transform3DGroup>
                    </PerspectiveCamera.Transform>
                </PerspectiveCamera>
            </Viewport3D.Camera>
            <ModelVisual3D>

            </ModelVisual3D>
            <ModelVisual3D x:Name="model">
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="group">
                        <AmbientLight Color="DarkGray"/>
                        <DirectionalLight Color="DarkGray" 
                                          Direction="10,10,5"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

