<UserControl x:Class="GeoReVi.BoxWhiskerChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:GeoReVi"
             mc:Ignorable="d" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:cal="http://www.caliburnproject.org"
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid  x:Name="BoxPlotGrid"
                                           Grid.Column="1">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Export chart"
                   Click="MenuItem_Click">
                </MenuItem>
                <MenuItem Header="Save chart object"
                          cal:Message.Attach="[Event Click]=[Action SaveChartObject]">

                </MenuItem>
                <MenuItem Header="Load chart object"
                          cal:Message.Attach="[Event Click]=[Action LoadChartObject]">

                </MenuItem>
                <Separator HorizontalAlignment="Stretch"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Margin="2,2"
                              Grid.Column="1"
                      VerticalAlignment="Stretch"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <DockPanel Grid.Column="0">
                <Expander DockPanel.Dock="Bottom"
                              ExpandDirection="Down"
                              IsExpanded="False">
                    <ToolBarTray HorizontalAlignment="Stretch"
                                          DockPanel.Dock="Top"
                                         Orientation="Horizontal">
                        <ToolBar Background="Transparent"
                                         HorizontalContentAlignment="Left">
                            <DockPanel Margin="0,0"
                                               HorizontalAlignment="Left">
                                <CheckBox IsChecked="{Binding Bco.ShallRender, Mode=TwoWay}"
                                              Margin="5"
                                                  ToolTip="Draw chart"
                                              VerticalAlignment="Center"/>
                                <fa:ImageAwesome Icon="PencilSquareOutline"
                                                         Height="15"
                                                         Margin="2,0"/>
                            </DockPanel>
                            <DockPanel Margin="0,10"
                                               HorizontalAlignment="Stretch">
                                <fa:ImageAwesome Icon="ArrowsH"
                                                         Width="20"                                                         
                                                         Margin="4,0"/>
                                <Slider HorizontalAlignment="Left" 
                                            Width="40"
                                            Maximum="1400"
                                            ClipToBounds="True"
                                            Minimum="200"
                                            Margin="0,3"
                                            VerticalAlignment="Center"
                                            x:Name="ChartWidthSlider"
                                                Value="{Binding Bco.ChartWidth, Delay=300, Mode=TwoWay}"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBox Text="{Binding ElementName=ChartWidthSlider, Path=Value, StringFormat=N2,Mode=TwoWay}"
                                                     Style="{StaticResource inputTextBox}"
                                                     Width="50"
                                                     Margin="0"/>
                                <Label Content="px"
                                                   Style="{StaticResource inputLabel}"/>

                            </DockPanel>
                            <DockPanel Margin="0,0">
                                <fa:ImageAwesome Icon="ArrowsV"
                                                         Height="20"
                                             Width="20"
                                                         Margin="4,0"/>
                                <Slider Width="40"
                                            Maximum="2000"
                                            HorizontalAlignment="Left"
                                            ClipToBounds="True"
                                            Minimum="200"
                                            Margin="0,3"
                                            VerticalAlignment="Center"
                                            Name="ChartHeightSlider"
                                                Value="{Binding Bco.ChartHeight, Delay=300, Mode=TwoWay}"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBox Text="{Binding ElementName=ChartHeightSlider, Path=Value, StringFormat=N2}"
                                                 Style="{StaticResource inputTextBox}"
                                                 Width="50"
                                                 Margin="0"/>
                                <Label Content="px"
                                               Style="{StaticResource inputLabel}"/>
                            </DockPanel>
                        </ToolBar>
                    </ToolBarTray>
                </Expander>
                <Button Style="{StaticResource IconButton}"
                                DockPanel.Dock="Left"
                                    FontFamily="{StaticResource FontAwesome}"
                                    ToolTip="Refresh"
                                    FontSize="14"
                                    Margin="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Content="{StaticResource FontAwesomeNewWindow}"
                                    cal:Bind.ModelWithoutContext="{Binding Bco}"
                                    cal:Message.Attach="CreateChart"/>
                <Grid DockPanel.Dock="Top"
                              Name="ChartGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Canvas Grid.Column="1"
                                  Grid.Row="0"
                                  HorizontalAlignment="Stretch">
                        <TextBlock Text="{Binding Path=Bco.Title}"
                                   Canvas.Top="-15">
                        </TextBlock>

                    </Canvas>
                    <Canvas>
                        <TextBlock Text="{Binding Path=Bco.XLabel.Text}"
                                       Canvas.Left="{Binding Path=Bco.XLabel.X}"
                                       Canvas.Top="{Binding Path=Bco.XLabel.Y}">
                        </TextBlock>

                    </Canvas>
                    <Canvas VerticalAlignment="Stretch">
                        <TextBlock Text="{Binding Path=Bco.YLabel.Text}"
                                   Canvas.Left="{Binding Path=Bco.YLabel.X}"
                                       Canvas.Top="{Binding Path=Bco.YLabel.Y}">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="270"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>

                    </Canvas>
                    <DockPanel Grid.Column="0">
                        <ItemsControl ItemsSource="{Binding Path=Bco.YLabels}"
                                              MaxHeight="{Binding Path=Bco.ChartHeight}"
                                          VirtualizingPanel.IsVirtualizing="True">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="1">
                                    </UniformGrid>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Text}"
                                                       Foreground="Transparent"
                                                       Margin="5,0,5,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DockPanel>
                    <StackPanel Grid.Column="1"
                           Grid.Row="2"
                          Margin="10"
                          VerticalAlignment="Stretch"
                                        HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding Path=Bco.XLabels}"
                                              MaxWidth="100"
                                          VirtualizingPanel.IsVirtualizing="True">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1">
                                    </UniformGrid>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontWeight="DemiBold"
                                                       Foreground="Transparent"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <Border Grid.Column="1"
                      Grid.Row="0"
                                    Margin="0"
                                Padding="5,5,100,5">
                        <Grid Name="ChartContainerGrid"
                                  Height="{Binding Path=Bco.ChartHeight}"
                                   Width="{Binding Path=Bco.ChartWidth}">
                            <Rectangle Width="{Binding Path=Bco.ChartWidth}"
                                           Height="{Binding Path=Bco.ChartHeight}"
                                           Stroke="Black"
                                           StrokeThickness="1"/>
                            <ItemsControl ItemsSource="{Binding Path=Bco.XGridlines}"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              Grid.Column="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <Polyline
                                                       Stroke="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                    AncestorType={x:Type UserControl}}, Path=DataContext.Bco.GridlineColor}"
                                                       StrokeThickness="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                        AncestorType={x:Type UserControl}}, Path=DataContext.Bco.GridlineThickness}"
                                                       Points="{Binding Path=Points}"
                                                        Visibility="{Binding IsXGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            </Polyline>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl ItemsSource="{Binding Path=Bco.YGridlines}"
                                              VirtualizingPanel.IsVirtualizing="True" 
                                              Grid.Column="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <Polyline
                                                       Stroke="{Binding RelativeSource={RelativeSource FindAncestor, 
AncestorType={x:Type UserControl}}, Path=DataContext.Bco.GridlineColor}"
                                                       StrokeThickness="{Binding RelativeSource={RelativeSource FindAncestor, 
AncestorType={x:Type UserControl}}, Path=DataContext.Bco.GridlineThickness}"
                                                       Points="{Binding Path=Points}"
                                                        Visibility="{Binding IsYGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            </Polyline>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl ItemsSource="{Binding Path=Bco.XTicks}"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              Grid.Column="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <Polyline
                                                       Stroke="{Binding RelativeSource={RelativeSource FindAncestor, 
AncestorType={x:Type UserControl}}, Path=DataContext.Bco.TickColor}"
                                                       StrokeThickness="{Binding RelativeSource={RelativeSource FindAncestor, 
AncestorType={x:Type UserControl}}, Path=DataContext.Bco.TickThickness}"
                                                       Points="{Binding Path=Points}">
                                            </Polyline>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl ItemsSource="{Binding Path=Bco.YTicks}"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              Grid.Column="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <Polyline
                                                       Stroke="{Binding RelativeSource={RelativeSource FindAncestor, 
AncestorType={x:Type UserControl}}, Path=DataContext.Bco.TickColor}"
                                                       StrokeThickness="1"
                                                       Points="{Binding Path=Points}">
                                            </Polyline>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl ItemsSource="{Binding Path=Bco.XLabels}"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              Grid.Column="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <TextBlock Text="{Binding Text}"
                                                           FontWeight="DemiBold"
                                                               Canvas.Left="{Binding X}"
                                                               Canvas.Top="{Binding Y}"/>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl ItemsSource="{Binding Path=Bco.YLabels}"
                                              VirtualizingPanel.IsVirtualizing="True"
                                              Grid.Column="0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <TextBlock Text="{Binding Text}"
                                                               FontWeight="DemiBold"
                                                               Canvas.Left="{Binding X}"
                                                               Canvas.Top="{Binding Y}"/>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl ItemsSource="{Binding Path=Bco.DataCollection, NotifyOnSourceUpdated=True}"
                                              VirtualizingPanel.IsVirtualizing="True">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Grid/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border>
                                            <Grid x:Name="DataCollectionControl">
                                                <ItemsControl ItemsSource="{Binding Path=BarPoints}"
                                                              VirtualizingPanel.IsVirtualizing="True">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Canvas>
                                                                <Rectangle Fill="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Border}}, Path=DataContext.FillColor}"
                                                                                               Stroke="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Border}}, Path=DataContext.BorderColor}"
                                                                                                   Width="{Binding Width}"
                                                                           Canvas.Left="{Binding X}"
                                                                           Height="{Binding Height}"
                                                                            Canvas.Top="{Binding Y}"
                                                                                               StrokeThickness="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Border}}, Path=DataContext.BorderThickness}"/>
                                                            </Canvas>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <ItemsControl ItemsSource="{Binding Path=Wiskers}"
                                              VirtualizingPanel.IsVirtualizing="True" 
                                              Grid.Column="0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Canvas>
                                                                <Polyline
                                                       Stroke="Black"
                                                       StrokeThickness="1"
                                                       Points="{Binding Path=Points}"
                                                        Visibility="{Binding IsYGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                </Polyline>
                                                            </Canvas>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <ItemsControl ItemsSource="{Binding Path=Outliers}"
                                              VirtualizingPanel.IsVirtualizing="True" 
                                              Grid.Column="0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Canvas>
                                                                <Ellipse Fill="Transparent"
                                                                         Stroke="Black"
                                                                         Stretch="Uniform"
                                                                         Width="12"
                                                                         Canvas.Left="{Binding X}"
                                                                         Height="12"
                                                                         Canvas.Top="{Binding Y}"
                                                                         StrokeThickness="2">

                                                                </Ellipse>
                                                            </Canvas>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ItemsControl ItemsSource="{Binding Path=Bco.Legend.LegendObjects, NotifyOnSourceUpdated=True}"
                                              VirtualizingPanel.IsVirtualizing="True"
                                          VerticalAlignment="Top"    
                                          Visibility="{Binding Path=Bco.Legend.IsLegend, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Canvas>
                                            <Rectangle Fill="{Binding Path=Rectangle.Brush}"
                                                           Canvas.Left="{Binding Path=Rectangle.X}"
                                                           Canvas.Top="{Binding Path=Rectangle.Y}"
                                                           Width="10"
                                                           Height="10"
                                                           StrokeThickness="2"
                                                           Stroke="{Binding Path=LineColor}"/>

                                            <TextBlock Text="{Binding Path=Label.Text}"
                                                                       Canvas.Left="{Binding Path=Label.X}"
                                                                       Canvas.Top="{Binding Path=Label.Y}"/>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                </Grid>
            </DockPanel>
        </ScrollViewer>
        <Grid Grid.Column="0">
            <Expander Template="{StaticResource HorizontalExpanderTemp}"
                                                      ExpandDirection="Left"
                                                      IsExpanded="False">
                <TabControl TabStripPlacement="Left"
                                                      Width="250">
                    <TabItem Style="{StaticResource LeftSideTabItem}"
                                                             Header="Chart style">
                        <TabControl TabStripPlacement="Left"
                                                      Width="215">
                            <TabItem Header="Labels"
                                                             Style="{StaticResource LeftSideTabItem}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Disabled"
                                                                      MaxHeight="460"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                                    <Border Background="{StaticResource ForegroundLightBrush}">
                                        <StackPanel MinWidth="30">
                                            <Expander ExpandDirection="Down"
                                                                          Header="Labels"
                                                                          FontWeight="Bold"
                                                                          Margin="3"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False"
                                                                                              HorizontalContentAlignment="Left">
                                                <StackPanel Margin="4">
                                                    <TextBlock Text="Title"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.Title, Mode=TwoWay}"/>
                                                    <TextBlock Text="X label"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.XLabel.Text, Mode=TwoWay}"/>
                                                    <TextBlock Text="Y label"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.YLabel.Text, Mode=TwoWay}"/>

                                                </StackPanel>
                                            </Expander>
                                        </StackPanel>
                                    </Border>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Axes"
                                                             Style="{StaticResource LeftSideTabItem}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Auto"
                                                                      MaxHeight="400"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                                    <Border Background="{StaticResource ForegroundLightBrush}">
                                        <StackPanel>
                                            <Button Style="{StaticResource HyperlinkButton}"
                                            cal:Message.Attach="SubdivideAxes"
                                                        cal:Bind.ModelWithoutContext="{Binding Bco}"
                                            FontSize="{StaticResource FontSizeVerySmall}"
                                            Content="Subdivide axes"
                                    HorizontalAlignment="Left"
                                    Margin="5"/>
                                            <Expander ExpandDirection="Down"
                                                                          Header="X axis"
                                                                          FontWeight="Bold"
                                                                          Margin="3"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False">
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="X max"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.Xmax, Mode=TwoWay}"/>
                                                    <TextBlock Text="X min"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.Xmin, Mode=TwoWay}"/>
                                                    <TextBlock Text="X tick"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.XTick, Mode=TwoWay}"/>
                                                    <TextBlock Text="X axis log"
                                                                       FontWeight="DemiBold"/>
                                                    <CheckBox IsChecked="{Binding Bco.IsXLog, Mode=TwoWay}"/>
                                                </StackPanel>
                                            </Expander>
                                            <Expander ExpandDirection="Down"
                                                                          Header="Y axis"
                                                                          FontWeight="Bold"
                                                                          Margin="3"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False">
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Y max"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.Ymax, Mode=TwoWay}"/>
                                                    <TextBlock Text="Y max"
                                                                       FontWeight="DemiBold"/>
                                                    <TextBox Text="{Binding Bco.Ymin, Mode=TwoWay}"/>
                                                </StackPanel>
                                            </Expander>
                                            <TextBlock Text="Outlier range (times inner quartal range)"
                                                                       FontWeight="DemiBold"/>
                                            <TextBox Text="{Binding Bco.OutlierRange, Mode=TwoWay}"/>
                                            <TextBlock Text="Remove outliers"
                                                                       FontWeight="DemiBold"/>
                                            <CheckBox IsChecked="{Binding Bco.OutliersRemoved, Mode=TwoWay}"/>
                                        </StackPanel>

                                    </Border>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Style"
                                                             Style="{StaticResource LeftSideTabItem}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Hidden"
                                                                      MaxHeight="400"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                                    <Border Background="{StaticResource ForegroundLightBrush}">
                                        <Expander ExpandDirection="Down"
                                                                          Header="Legend"
                                                                          FontWeight="Bold"
                                                                          Margin="3"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False">
                                            <StackPanel Margin="6">
                                                <DockPanel Margin="0,5">
                                                    <TextBlock Text="Has legend"
                                                                           FontWeight="DemiBold"/>
                                                    <CheckBox IsChecked="{Binding Bco.Legend.IsLegend, Mode=TwoWay}"
                                                                          HorizontalAlignment="Right"/>
                                                </DockPanel>
                                                <TextBlock Text="Legend Position"
                                                                                           Margin="0,5"
                                                                       FontWeight="DemiBold"/>
                                                <ComboBox HorizontalAlignment="Left" 
                                                              VerticalAlignment="Center" 
                                                                                          Margin="0,5"
                                                              MinWidth="60"
                                                              ItemsSource="{Binding Path=Bco.Legend.LegendPosition, Converter={local:EnumToCollectionConverter}, Mode=OneTime}"
                                                              SelectedValuePath="Value"
                                                              DisplayMemberPath="Description"
                                                              SelectedValue="{Binding Path=Bco.Legend.LegendPosition, Mode=OneWayToSource}"
                                                                              SelectedIndex="0"/>

                                            </StackPanel>
                                        </Expander>
                                    </Border>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Gridlines"
                                                             Style="{StaticResource LeftSideTabItem}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Hidden"
                                                                      MaxHeight="400"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                                    <Border Background="{StaticResource ForegroundLightBrush}">
                                        <StackPanel MinWidth="30">
                                            <Expander ExpandDirection="Down"
                                                                          Header="Gridlines"
                                                                          FontWeight="Bold"
                                                                          Margin="3"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False">
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Gridline pattern"
                                                                       FontWeight="DemiBold"/>
                                                    <ComboBox HorizontalAlignment="Left" 
                                                              VerticalAlignment="Center" 
                                                                                              MinWidth="100"
                                                              ItemsSource="{Binding Path=Bco.GridlinePattern, Converter={local:EnumToCollectionConverter}, Mode=OneTime}"
                                                              SelectedValuePath="Value"
                                                              DisplayMemberPath="Description"
                                                              SelectedValue="{Binding Path=Bco.GridlinePattern, Mode=OneWayToSource}"
                                                                              SelectedIndex="0"/>
                                                    <TextBlock Text="Line color"
                                                                                               Margin="0,5"
                                                                                       FontWeight="DemiBold"/>
                                                    <xctk:ColorPicker  SelectedColor="{Binding Bco.GridlineColor, Mode=TwoWay, Converter={StaticResource ColorToSolidBrushValueConverter}}"
                                                                                               Width="120"
                                                                                               HorizontalContentAlignment="Left">

                                                    </xctk:ColorPicker>
                                                    <DockPanel Margin="0,5">
                                                        <TextBlock Text="Vertical grid"
                                                                           FontWeight="DemiBold"/>
                                                        <CheckBox IsChecked="{Binding Bco.IsYGrid, Mode=TwoWay}"
                                                                                      HorizontalAlignment="Right"/>
                                                    </DockPanel>
                                                    <DockPanel Margin="0,5">
                                                        <TextBlock Text="Horizontal grid"
                                                                           FontWeight="DemiBold"/>
                                                        <CheckBox IsChecked="{Binding Bco.IsXGrid, Mode=TwoWay}"
                                                                                      HorizontalAlignment="Right"/>
                                                    </DockPanel>
                                                </StackPanel>
                                            </Expander>
                                        </StackPanel>
                                    </Border>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </TabItem>
                    <TabItem Style="{StaticResource LeftSideTabItem}"
                                                             Header="Data series"
                                                             MaxHeight="500">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Disabled"
                                                                      MinHeight="450"
                                                                      MaxHeight="500"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                            <TabControl TabStripPlacement="Left"
                                                                    Width="215"
                                                                        x:Name="BcoTabControl"
                                                                    ItemsSource="{Binding Path=Bco.DataCollection, NotifyOnSourceUpdated=True}"
                                                                    SelectedIndex="0">
                                <TabControl.ItemContainerStyle>
                                    <Style TargetType="TabItem" BasedOn="{StaticResource LeftSideTabItem}">

                                    </Style>
                                </TabControl.ItemContainerStyle>
                                <TabControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border>
                                            <TextBlock Text="{Binding SeriesName}">
                                                <TextBlock.LayoutTransform>
                                                    <RotateTransform Angle="270"/>
                                                </TextBlock.LayoutTransform>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </TabControl.ItemTemplate>

                                <!-- Change ContentTemplate to control main content -->
                                <TabControl.ContentTemplate>
                                    <DataTemplate>
                                        <Grid VerticalAlignment="Stretch"
                                                                          Background="Transparent">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Disabled"
                                                                      MaxHeight="400"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                                                <StackPanel>
                                                    <Expander ExpandDirection="Down"
                                                                          Header="Bars"
                                                                          FontWeight="Bold"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False">
                                                        <StackPanel  Margin="5">
                                                            <TextBlock Text="Fill color"
                                                                               FontWeight="DemiBold"/>
                                                            <xctk:ColorPicker  SelectedColor="{Binding Path=FillColor, Mode=TwoWay, Converter={StaticResource ColorToSolidBrushValueConverter}}"
                                                                                                       Width="140"
                                                                                                       HorizontalContentAlignment="Left">
                                                            </xctk:ColorPicker>
                                                            <TextBlock Text="Border color"
                                                                               FontWeight="DemiBold"/>
                                                            <xctk:ColorPicker  SelectedColor="{Binding Path=BorderColor, Mode=TwoWay, Converter={StaticResource ColorToSolidBrushValueConverter}}"
                                                                                                       AvailableColorsHeader="Available"
                                                                                                           Width="140"
                                                                                                       HorizontalContentAlignment="Left">
                                                            </xctk:ColorPicker>
                                                            <TextBlock Text="Border thickness"
                                                                                                   FontWeight="DemiBold"/>
                                                            <TextBox Text="{Binding BorderThickness, Mode=TwoWay}"/>
                                                            <TextBlock Text="Bar width"
                                                                                                   FontWeight="DemiBold"/>
                                                            <TextBox Text="{Binding BarWidth, Mode=TwoWay}"/>
                                                            <TextBlock Text="Series name"
                                                                                                   FontWeight="DemiBold"/>
                                                            <TextBox Text="{Binding SeriesName, Mode=TwoWay}"/>

                                                        </StackPanel>
                                                    </Expander>
                                                </StackPanel>
                                            </ScrollViewer>
                                        </Grid>
                                    </DataTemplate>
                                </TabControl.ContentTemplate>
                            </TabControl>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Editor"
                                     Style="{StaticResource LeftSideTabItem}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Auto"
                                                                      MaxHeight="400"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                            <Border Background="{StaticResource ForegroundLightBrush}">
                                <StackPanel MinWidth="30">
                                    <Expander ExpandDirection="Down"
                                                                          Header="Editing"
                                                                          FontWeight="Bold"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False">
                                        <StackPanel Margin="6">
                                            <WrapPanel>
                                                <Button Style="{StaticResource IconButton}"
                                                                    Content="{StaticResource FontAwesomeTrash}"
                                                                    Foreground="Red"
                                                                    ToolTip="Remove series from chart"
                                                                    cal:Message.Attach="RemoveSelectedSeries"
                                                                cal:Bind.ModelWithoutContext="{Binding Bco}">
                                                </Button>
                                            </WrapPanel>
                                            <ListView Margin="10"
                                                  Grid.Row="2"
                                                                  SelectionMode="Single"
                                                  ItemsSource="{Binding Path=Bco.DataSet}"
                                                                  SelectedItem="{Binding Path=Bco.SelectedDataSet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  BorderBrush="Transparent">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextAlignment="Left"
                                                                               Text="{Binding Path=Name, Mode=OneWay}"
                                                                               VerticalAlignment="Center"
                                                                               HorizontalAlignment="Center"
                                                                               FontSize="{StaticResource FontSizeVerySmall}"
                                                                               Foreground="{StaticResource ForegroundVeryDarkBrush}"
                                                                               Style="{StaticResource GridViewColumnTextStyle}"
                                                                               Focusable="False"
                                                                             >
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                          
                                        </StackPanel>
                                    </Expander>
                                </StackPanel>
                            </Border>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Expander>
        </Grid>
    </Grid>
</UserControl>
