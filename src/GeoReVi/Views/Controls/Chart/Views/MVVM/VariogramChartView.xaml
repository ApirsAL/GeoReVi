                                                                FontWeight="DemiBold"
                                                               VerticalAlignment="Center"/>
                                                        <ComboBox HorizontalAlignment="Left" 
                                                              VerticalAlignment="Center" 
                                                              MinWidth="100"
                                                              ItemsSource="{Binding Path=Vco.Direction, Converter={local:EnumToCollectionConverter}, Mode=OneTime}"
                                                              SelectedValuePath="Value"
                                                              DisplayMemberPath="Description"
                                                              SelectedValue="{Binding Path=Vco.Direction, Mode=OneWayToSource}"
                                                              SelectedIndex="2"/>
                                                        <TextBlock Text="Bins"
                                                                           FontWeight="DemiBold"/>
                                                        <TextBox Text="{Binding Path=Vco.Vh.NumberBins, Mode=TwoWay}"/>
                                                        <Button Style="{StaticResource MainButton}"
                                                                                            FontSize="{StaticResource FontSizeSmall}"
                                                                                        Content="Optimize model"
                                                                                        cal:Message.Attach="[Event Click] = [Action OptimizeModel]"
                                                                cal:Bind.ModelWithoutContext="{Binding Vco}"/>
                                                        <TextBlock Text="Squared differences"
                                                                           FontWeight="DemiBold"/>
                                                        <TextBlock Text="{Binding Path=Vco.Vh.SquaredDifferences, Mode=OneWay}"
                                                                           FontWeight="DemiBold"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Expander>
                                        </StackPanel>
                                    </Border>
                                </ScrollViewer>
                            </TabItem>
                            <TabItem Header="Editor"
                                     Style="{StaticResource LeftSideTabItem}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                                      HorizontalScrollBarVisibility="Auto"
                                                                      MaxHeight="400"
                                                                     Margin="2,2"
                                                                     VerticalAlignment="Top">
                                    <Border Background="{StaticResource ForegroundLightBrush}">
                                        <StackPanel MinWidth="30">
                                            <Expander ExpandDirection="Down"
                                                                          Header="Editing"
                                                                          FontWeight="Bold"
                                                                          Template="{StaticResource StretchyExpanderTemp}"
                                                                          IsExpanded="False">
                                                <StackPanel Margin="6">
                                                    <WrapPanel>
                                                        <Button Style="{StaticResource IconButton}"
                                                                    Content="{StaticResource FontAwesomeTrash}"
                                                                    Foreground="Red"
                                                                    ToolTip="Remove series from chart"
                                                                    cal:Message.Attach="RemoveSelectedSeries"
                                                                cal:Bind.ModelWithoutContext="{Binding Vco}">
                                                        </Button>
                                                    </WrapPanel>
                                                    <ListView Margin="10"
                                                  Grid.Row="2"
                                                                  SelectionMode="Single"
                                                  ItemsSource="{Binding Path=Vco.DataSet}"
                                                                  SelectedItem="{Binding Path=Vco.SelectedDataSet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  BorderBrush="Transparent">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock TextAlignment="Left"
                                                                               Text="{Binding Path=Name, Mode=OneWay}"
                                                                               VerticalAlignment="Center"
                                                                               HorizontalAlignment="Center"
                                                                               FontSize="{StaticResource FontSizeVerySmall}"
                                                                               Foreground="{StaticResource ForegroundVeryDarkBrush}"
                                                                               Style="{StaticResource GridViewColumnTextStyle}"
                                                                               Focusable="False"
                                                                             >
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>

                                                </StackPanel>
                                            </Expander>
                                        </StackPanel>
                                    </Border>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </ScrollViewer>
                </Expander>
            </Grid>
            <Border Background="{StaticResource ApirsGrayBrush}"
                                        Opacity="0.60"
                                        Visibility="{Binding Path=Vco.Updating, 
                                                    Converter={StaticResource BooleanToVisibilityConverter}, 
                                                    NotifyOnSourceUpdated=True}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                <ProgressBar IsIndeterminate="True"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Margin="20"
                                                 Width="100"/>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
